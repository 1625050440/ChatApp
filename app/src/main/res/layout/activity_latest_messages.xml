<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createRoom_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kangaroo1"
    tools:context=".messages.LatestMessagesActivity">


    <TextView
        android:id="@+id/text_layout"
        android:layout_width="368dp"
        android:layout_height="230dp"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="353dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        android:layout_marginBottom="240dp"
        android:background="@drawable/border_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/room_create_button"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_color"
        android:text="ルーム作成"
        android:textStyle="bold"
        android:textColor="#FF9933"
        app:layout_constraintStart_toStartOf="@+id/text_layout"
        app:layout_constraintTop_toTopOf="@+id/text_layout" />

    <EditText

        android:id="@+id/title_edditext"

        android:layout_width="0dp"

        android:layout_height="0dp"

        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/border_color"
        android:gravity="center"
        android:hint="課題名"
        android:textColor="@android:color/black"
        android:textColorHint="@drawable/common_google_signin_btn_text_dark"
        android:textStyle="bold"
        android:editable="true"
        app:layout_constraintBottom_toBottomOf="@+id/room_create_button"
        app:layout_constraintEnd_toEndOf="@+id/text_layout"
        app:layout_constraintStart_toEndOf="@+id/room_create_button"
        app:layout_constraintTop_toTopOf="@+id/text_layout" />

    <EditText

        android:id="@+id/explain_EditText"

        android:layout_width="0dp"

        android:layout_height="0dp"

        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border_color"
        android:gravity="top"
        android:hint="解説"
        android:textColor="@android:color/black"
        android:textColorHint="@drawable/common_google_signin_btn_text_dark"
        android:textStyle="bold"
        android:editable="true"
        app:layout_constraintBottom_toBottomOf="@+id/text_layout"
        app:layout_constraintEnd_toEndOf="@+id/text_layout"
        app:layout_constraintStart_toStartOf="@+id/text_layout"
        app:layout_constraintTop_toBottomOf="@+id/title_edditext" />

    <TextView
        android:id="@+id/error_textview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explain_EditText" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="104dp"
        android:layout_height="61dp"
        android:layout_marginStart="232dp"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="ルーム削除"
        android:visibility="invisible"
        android:clickable="false"
        android:background="@drawable/border_color"
        app:layout_constraintBottom_toTopOf="@+id/text_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.576" />

    <Button
        android:id="@+id/detachange_button"
        android:layout_width="96dp"
        android:layout_height="61dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="データ更新"
        android:visibility="invisible"
        android:clickable="false"
        android:background="@drawable/border_color"
        app:layout_constraintBottom_toBottomOf="@+id/delete_button"
        app:layout_constraintStart_toEndOf="@+id/delete_button"
        app:layout_constraintTop_toTopOf="@+id/delete_button" />


</android.support.constraint.ConstraintLayout>